[Unit]
Description=Docserver for serving documents
After=network.service

[Service]
Restart=always
RestartSec=10
TimeoutSec=300
WorkingDirectory=/root/
ExecStart=/usr/bin/java -Xms256m -Xmx256m -XX:MaxDirectMemorySize=256M -XX:MaxGCPauseMillis=50 -jar docsrv-0.1.0.jar --dbName docsrv-@hostname


[Install]
WantedBy=multi-user.target